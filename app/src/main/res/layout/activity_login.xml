<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20sp"
    android:orientation="vertical"
    tools:context=".activity.LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageViewBackLogin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_baseline_arrow_back_24"
                        tools:ignore="VectorDrawableCompat" />

                </LinearLayout>

            </androidx.appcompat.widget.Toolbar>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/helveticanowtextextrabold"
                android:text="Welcome!"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="24sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/helveticanowtextextmedium"
                android:text="Login with your email exsisting credentials."
                android:textAlignment="center"
                android:textColor="#6E85A7" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/helveticanowtextextregular"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textEmailLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/helveticanowtextextmedium"
                    android:layout_marginTop="20sp"
                    android:text="Email:"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_sign_up"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:fontFamily="@font/helveticanowtextextmedium"
                    android:gravity="end"
                    android:text="Sign Up"
                    android:textColor="#078BD4"
                    android:textSize="15sp" />
            </LinearLayout>

            <EditText
                android:maxLines="1"
                android:id="@+id/editEmailLogin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20sp"
                android:background="@drawable/shape"
                android:drawableLeft="@drawable/ic_baseline_email_24"
                android:drawablePadding="10dp"
                android:ems="10"
                android:fontFamily="@font/helveticanowtextextmedium"
                android:hint="Enter email"
                android:inputType="textPersonName"
                android:paddingStart="10dp"
                android:singleLine="true"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textPasswLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/helveticanowtextextmedium"
                android:layout_marginTop="20sp"
                android:hint="Password"
                android:text="Password"
                android:textSize="20sp" />

            <EditText
                android:maxLines="1"
                android:id="@+id/editPasswordLogin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20sp"
                android:background="@drawable/shape"
                android:drawableLeft="@drawable/ic_baseline_vpn_key_24"
                android:drawablePadding="10dp"
                android:ems="10"
                android:fontFamily="@font/helveticanowtextextmedium"
                android:hint="Enter password"
                android:inputType="textWebPassword"
                android:paddingStart="10dp"
                android:singleLine="true"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/textForgotPasswr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/helveticanowtextextmedium"
                    android:gravity="end"
                    android:text="Forgot Password?" />
            </LinearLayout>

            <Button
                android:id="@+id/btLogin"
                android:layout_width="246dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/button_shape"
                android:fontFamily="@font/helveticanowtextextmedium"
                android:inputType="textCapSentences"
                android:text="Sign in"
                app:backgroundTint="#078BD4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp">

                <View
                    android:id="@+id/view"
                    android:layout_width="130dp"
                    android:layout_height="1dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="#979797"
                    android:layout_gravity="left"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="OR"
                    android:textAlignment="center" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="130dp"
                    android:layout_height="1dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="#979797"
                    android:layout_gravity="right"
                    tools:ignore="MissingConstraints" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50px"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    app:srcCompat="@drawable/facebook" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="8dp"
                    app:srcCompat="@drawable/google" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>